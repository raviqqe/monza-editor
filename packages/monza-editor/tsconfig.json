{
  "extends": "@raviqqe/tsconfig/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "outDir": "dist",
    "rootDir": "src",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "goToDefinition": true,
          "noUncheckedIndexedAccess": true
        }
      }
    ]
  },
  "include": ["src"]
}
